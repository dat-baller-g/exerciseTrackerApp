    <link rel="stylesheet" href="/css/index.css">
  </head>
  <body>
    <div class="container-fluid">
      <div class="top-div">
        <h2 id="top-heading">Hello <%= username %> </h2>

      </div>



      <div class="form-container">
        <div class="exercise-div">
          <form id="exercise-form" action="/api/users/:username/exercise" method="post">
            <p class="form-heading">Login your exercise details in the form below.</p>
            <!-- <h3 class="small-heading">Login exercise details.</h3> -->
            <!-- <input id="uname" type="text" name=":username" value="" placeholder="* Username" required>
            <br> -->
            <input type="text" name="description" value="" placeholder="* Description of exercise" required>
            <br>
            <input type="text" name="duration" value="" placeholder="* Duration (mins)" required>
            <br>
            <input type="text" name="date" value="" placeholder="Date (yyyy/mm/dd)">
            <br>
            <button type="submit" name="submit" class="btn btn-success btn-sm" value="<%= username %>">Submit</button>

          </form>


        </div>
        <div class="view-logs-div">
          <p class="form-heading">View specific exercise logs within a range.</p>
          <form class="" id="specificlog-form" action="/api/users/:username/logs" method="post">
            <input type="text" name="from" value="" placeholder="Start date">
            <input type="text" name="to" value="" placeholder="End date">
            <input type="number" name="limit" value="" placeholder="Number of logs"><br>
            <button type="submit" name="viewSpecificLogButton" class="btn btn-success btn-sm" value="<%= username %>" id="uName">Submit</button>
          </form>
        </div>
      </div>
      <div class="bottom-div">
        <div class="view-exerciselogs-div">
          <!-- <h5>View all exercise logs</h5> -->
          <form class="" id="exerciselog-form" action="/api/users/:username/exercise" method="get">
            <button type="submit" name="viewLogButton" class="btn btn-primary btn-sm" value="<%= username %>" id="user">View All Exercise Logs</button>
          </form>
        </div>



      </div>


    </div>

  </body>
</html>






